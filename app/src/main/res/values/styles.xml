<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.WithActionBarSearch" parent="AppTheme">
        <!--        <item name="android:windowBackground">@color/contact_search_background</item>-->
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.ActionBar">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="fontRegular">
        <item name="roboFont">RobotoCondensed-Regular</item>
    </style>

    <style name="fontItalic">
        <item name="roboFont">RobotoCondensed-LightItalic</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="fontBold">
        <item name="roboFont">RobotoCondensed-BoldItalic</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="request_access_style" parent="fontItalic">
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:textColor">@color/pure_blue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="timestamp_comment" parent="fontBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txt_very_small</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="comment_text" parent="fontBold">
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:textColor">@color/pure_black</item>
    </style>

    <style name="like_text" parent="fontBold">
        <item name="android:textSize">@dimen/txt_big</item>
        <item name="android:textColor">@color/pure_black</item>
    </style>

    <style name="like_timestamp" parent="fontRegular">
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="comment_text_input" parent="fontBold">
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:textColor">@color/pure_black</item>
    </style>

    <style name="title_poem" parent="fontBold">
        <item name="android:textSize">@dimen/txt_big</item>
        <item name="android:textColor">@color/pure_black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_poem" parent="fontItalic">
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:textColor">@color/about_delete</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_input_regular" parent="fontBold">
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:textColor">@color/pure_black</item>
    </style>

    <style name="item_decoration_style" parent="fontBold">
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:textColor">@color/pure_blue</item>
        <item name="android:layout_marginTop">@dimen/margin_very_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonBig">
        <item name="android:layout_width">@dimen/bottom_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/lightbuttontextstyle</item>
        <item name="android:background">@drawable/lightbuttonstyle</item>
        <item name="android:layout_gravity">center|bottom</item>
    </style>

    <style name="ButtonBigBlue" parent="@style/ButtonBig">
        <item name="android:textColor">@drawable/bluebuttontextstyle</item>
        <item name="android:background">@drawable/bluebuttonstyle</item>
    </style>

    <style name="comment_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="app:elevation">@dimen/elevation_regular</item>-->
    </style>

    <style name="signin_message" parent="fontItalic">
        <item name="android:textSize">@dimen/txt_big</item>
        <item name="android:textColor">@color/pure_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
    </style>

</resources>
